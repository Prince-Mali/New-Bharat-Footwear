<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css">
<body>
    <div class="main row">
        <div class="col col-4 p-4 mt-5 mb-5">
            <form action="/signup" method="post">
                <div class="heading">
                    <h3>Create Account</h3>
                </div>
                <div class="mt-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" placeholder="Enter Username" name="username">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" placeholder="Enter Email" name="email">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" placeholder="Enter password" name="password">
                </div>
                <!-- <div class="mt-3">
                    <label class="form-label" for="role">Role</label>
                    <input class="form-control" type="text" id="role" name="role">
                </div> -->
                <div class="mt-3">
                    <input type="submit" class="btn btn-primary" value="Signup">
                </div>
            </form>
            <hr>
            <h6>Already have an account? <a href="/login">login</a></h6>
        </div>
    </div>
</body>