<%- layout('layouts/boilerplate') %>
<body>
    <div class="main-container mt-2 p-2">
        <h3>Update Profile</h3>
        <div class="form p-2">
            <form action="/profile/<%= currUser._id %>" method="post">
                <div class="mb-3">
                    <label for="" class="form-label">Full Name</label>
                    <input type="text" class="form-control" name="name" value="<%= user.name %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Profile image</label>
                    <input type="url" class="form-control" name="image" value="<%= user.image %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Email</label>
                    <input type="text" class="form-control" name="email" value="<%= user.email %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Mobile</label>
                    <input type="text" class="form-control" name="contact" value="<%= user.contact %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" value="<%= user.address %>">
                </div>
                <div class="mb-3">
                    <input type="submit" class="btn btn-primary" value="Update">
                </div>
            </form>
        </div>
    </div>
</body>