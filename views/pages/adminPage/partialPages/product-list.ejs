<h1>Product list</h1>

<div class="list-container mt-2">
    <table class="table table-striped">
        <thead class="table-primary">
            <tr>
                <th>Product</th>
                <th>Product ID</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sale</th>
                <th>Stock</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody style="text-align: start;">
            <% for(product of productList) { %>
                <tr>
                    <td><img src="<%= product.imageUrl %>" alt="">&nbsp;<%= product.title %></td>
                    <td><%= product._id %></td>
                    <td><%= product.price %></td>
                    <td><%= product.quantity %></td>
                    <td>50</td>
                    <% if(product.quantity >= 1) { %>
                        <td>Available</td>
                    <% } else { %>
                        <td>Out of Stock</td>
                    <% } %>
                    <td><a style="color: black;" href="/products/<%= product._id %>"><i class="fa-solid fa-eye"></i></a></td>
                    <td><a style="color: royalblue;" href="/<%= product._id %>/edit"><i class="fa-solid fa-pen"></i></a></td>
                    <td><form action="/product/<%= product._id %>?_method=DELETE" method="post">
                        <button style="color: red; border: none;"><i class="fa-solid fa-trash-can"></i></button>
                    </form></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>