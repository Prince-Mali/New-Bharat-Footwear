<style>
    .about-section {
  max-width: 1200px;
  margin: 50px auto;
  padding: 40px 20px;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  text-align: center;
  font-family: 'Segoe UI', sans-serif;
}

.about-section h1 {
  font-size: 3rem;
  margin-bottom: 20px;
  color: #222;
}

.about-section p {
